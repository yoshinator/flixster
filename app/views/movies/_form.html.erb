<%= form_with model: movie, local: true do |f|%>
  <%=f.label :title %>
  <%=f.text_field :title, autofocus: true%>
  <%=f.label :description %>
  <%=f.text_area :description, rows: 10 %>
  <%=f.label :total_gross %>
  <%=f.number_field :total_gross %>
  <%=f.label :rating %>
  <%=f.text_field :rating %>
  <%=f.label :released_on %>
  <%=f.date_select :released_on, {ampm: true}, {class: "date"}%>
  <%=f.submit%>

<%end%>